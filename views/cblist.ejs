<!DOCTYPE html>
<html lang=eng>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width , initial-scale=1.0">
        <title>Cabang</title>
    </head>

    <body>
        <h1>List Cabang Restaurant</h1>
        <h1><%= data.name %> </h1>
        <h1>Owner:<%= data.owner %></h1>
        <a href = '/restaurant/<%= data.id %>/cabang/list/add'><button>Add</button></a>
        <table border = "2">
            <thead>
                <tr>
                    <th>Id </th>
                    <th>Cabang</th>
                    <th>No.Telp</th>
                    <th>Alamat</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                <% data.Cabangs.forEach(el=>{ %>
                <tr>
                    <td><%= el.id %></td>
                    <td><%= el.cabang%></td>
                    <td><%= el.no_telp%></td>
                    <td><%= el.alamat %></td>
                    <td>
                    <a href="/restaurant/<%= el.RestaurantId %>/cabang/list/<%= el.id %>/edit"><button>Edit</button></a>
                    <a href="/restaurant/<%= el.RestaurantId %>/cabang/list/<%= el.id %>/delete" onclick="return confirm('Are you sure?')"><button>Delete</button></a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>